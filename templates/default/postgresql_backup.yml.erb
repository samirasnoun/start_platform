---
service_name: postgresql
local_db: sqlite3:/var/vcap/services/postgresql/postgresql_node.db
backup_base_dir: /var/vcap/backup
backup_cmd: /usr/lib/postgresql/9.0/bin/pg_dump -Fc --host=:host --port=:port --username=:user --file=:full_path/:name.dump :name
mbus: nats://nats:nats@<%=node[:ipaddress]%>:4222/
timeout: 600
index: 0
pid: /var/vcap/sys/run/postgresql_backup.pid
node_id: postgresql_node_0
postgresql:
  host: <%=node[:ipaddress]%>
  port: 5433
  user: root
  pass: changeme
  database: pg_service
logging:
  level: debug
