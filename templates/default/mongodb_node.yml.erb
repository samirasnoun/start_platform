---
capacity: 50
plan: free
local_db: sqlite3:/var/vcap/services/mongodb/mongodb_node.db
mbus: nats://nats:nats@<%=node[:ipaddress]%>:4222/
index: 0
base_dir: /var/vcap/services/mongodb/instances
mongod_log_dir: /var/vcap/services/mongodb/logs
pid: /var/vcap/sys/run/mongodb_node.pid
max_memory: 128
node_id: mongodb_node_0
op_time_limit: 6
mongo_timeout: 2

supported_versions: ['1.8', '2.0']
default_version: "1.8"

mongod_path:
  "1.8": "/root/cloudfoundry/.deployments/allinone/deploy/mongodb/1.8.5/bin/mongod"
  "2.0": "/root/cloudfoundry/.deployments/allinone/deploy/mongodb/2.0.6/bin/mongod"

mongorestore_path:
  "1.8": "/root/cloudfoundry/.deployments/allinone/deploy/mongodb/1.8.5/bin/mongorestore"
  "2.0": "/root/cloudfoundry/.deployments/allinone/deploy/mongodb/2.0.6/bin/mongorestore"

mongod_options:
  "1.8": ""
  "2.0": "--nojournal"

port_range:
  first: 25001
  last: 45000
migration_nfs: /mnt/migration
logging:
  level: debug
